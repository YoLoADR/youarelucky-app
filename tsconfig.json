{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "strict": false, // Désactive toutes les vérifications strictes
    "noImplicitAny": false, // Autorise les expressions et déclarations avec un typage 'any' implicite
    "strictNullChecks": false, // Ne vérifie pas si les valeurs peuvent être null ou undefined
    "strictFunctionTypes": false, // Ne vérifie pas strictement les types des fonctions
    "strictPropertyInitialization": false, // Ne vérifie pas si les propriétés de classes sont initialisées dans le constructeur
    "strictBindCallApply": false, // Ne vérifie pas strictement les appels et les bindings de fonctions
    "noImplicitThis": false, // Autorise 'this' à être de type 'any'
    "alwaysStrict": false ,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
